	    //定义Integer数组，默认值为10个null
		   Integer[] array = new Integer[10];
		    //使用Scanner的sytem in流
		   Scanner sc = new Scanner(System.in);
		   for(int i=0;i<10;i++){
		        //读取数字放入数组的第i个元素
			   System.out.println("输入数：");
		       array[i]=sc.nextInt();
		       System.out.println(Arrays.asList(array));
		   }
		   System.out.println("请输入查找的数：");
		   int key = sc.nextInt();
		   int a = binSearch(array,key);
		   System.out.println(a);
		   
	}
	static int binSearch ( Integer[] array, int key ) {
		int mid, low, high;
		low = 0;
		high = array.length-1;
		while ( low <= high ) {
		mid = (low +high)/2;
		if ( key == array [mid] )
		return mid;
		else if ( key < array [mid] )
		high = mid -1;
		else
		low = mid + 1;
		}
		return -1;
	}
}

