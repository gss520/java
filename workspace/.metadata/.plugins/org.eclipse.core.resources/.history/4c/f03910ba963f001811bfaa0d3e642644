package cn.guo.array2;

public class Matrix {
	public static void main(String[] args) {
		int[][] a = {
				{1,3},
				{2,4},
		};
		int[][] b = {
				{3,4},
				{5,6},
		};
		int[][] c = new int[2][2];
		
		
//		c[0][0] = a[0][0]+b[0][0];
//		c[0][1] = a[0][1]+b[0][1];
//		c[1][0] = a[1][0]+b[1][0];
//		c[1][1] = a[1][1]+b[1][1];		
		for(int i=0;i<c.length;i++){
			for(int j=0;j<c.length;j++){
				c[i][j] = a[i][j]+b[i][j];
				
			}
		}
//		System.out.println(c[0][0]+"  "+c[0][1]);
//		System.out.println(c[1][0]+"  "+c[1][1]);
	//´òÓ¡¾ØÕó
		for(int i=0;i<c.length;i++){
			for(int j=0;j<c.length;j++){
				System.out.print(c[i][j]);
				
			}
			System.out.println();
		}
	}
}
